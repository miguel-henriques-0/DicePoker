<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChelasPokerDice"
        android:name=".ChelasPokerDiceApp"
        >
        <activity
            android:name=".views.lobbyActivity.LobbyActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" />
        <activity
            android:name=".views.createLobbyActivity.CreateLobbyActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" />
        <activity
            android:name=".views.lobbyListActivity.LobbyListActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" />
        <activity
            android:name=".views.statisticsActivity.StatisticsActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" />
        <activity
            android:name=".views.aboutActivity.AboutActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" />
        <activity
            android:name=".views.homeActivity.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice" >
        </activity>
        <activity
            android:name=".views.loginActivity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasPokerDice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>